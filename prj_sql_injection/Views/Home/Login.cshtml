
@{
    ViewBag.Title = "Login";
}

<h2 class="mb-3">登入</h2>

@using (Ajax.BeginForm("Login", "Home", new AjaxOptions
{
    OnSuccess = "getResult"

}))
{

    <table>
        <thead></thead>
        <tbody>
            <tr>
                <td><label for="username">員工姓名： </label></td>
                <td><input name="userName" type="text" id="username" /></td>
            </tr>
            <tr>
                <td><label for="password">員工密碼： </label></td>
                <td><input name="password" type="text" id="password" /></td>
            </tr>
            <tr>
                <td><button>登入</button></td>
            </tr>
        </tbody>
    </table>
}


<script>
    function getResult(data) {
        alert(data.Message);
        if (data.Success) {
            window.location = '@Url.Action("CustomerList", "Home")?employeeId=' + data.Data;
        } else {
            location.reload();
        }
    }
</script>